{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib/auth-service-proxy": ["libs/auth/service-proxy-auth/src/index.ts"],
      "@lib/feed/news-feed-cache": ["libs/feeds/news-feed-cache/src/index.ts"],
      "@lib/file/data-access": ["libs/file/data-access-file/src/index.ts"],
      "@lib/file/domain": ["libs/file/domain-file/src/index.ts"],
      "@lib/file/feature": ["libs/file/feature-file/src/index.ts"],
      "@lib/notification/data-access": [
        "libs/notification/data-access-notification/src/index.ts"
      ],
      "@lib/notification/domain": [
        "libs/notification/domain-notification/src/index.ts"
      ],
      "@lib/notification/feature": [
        "libs/notification/feature-notification/src/index.ts"
      ],
      "@lib/post/data-access": ["libs/post/data-access-post/src/index.ts"],
      "@lib/post/domain": ["libs/post/domain-post/src/index.ts"],
      "@lib/post/feature": ["libs/post/feature-post/src/index.ts"],
      "@lib/post/replica-user": ["libs/post/replica-user/src/index.ts"],
      "@lib/shared/common/*": ["libs/shared/common/src/*/index.ts"],
      "@lib/shared/ddd": ["libs/shared/ddd/src/index.ts"],
      "@lib/shared/ddd-v2": ["libs/shared/ddd-v2/src/index.ts"],
      "@lib/shared/service-interface": [
        "libs/shared/service-interface/src/index.ts"
      ],
      "@lib/user/data-access": ["libs/user/data-access-user/src/index.ts"],
      "@lib/user/domain": ["libs/user/domain-user/src/index.ts"],
      "@lib/user/feature": ["libs/user/feature-user/src/index.ts"],
      "@lib/user/service-proxy": ["libs/user/service-proxy-user/src/index.ts"],
      "@lib/relationship/data-access": [
        "libs/relationship/data-access-relationship/src/index.ts"
      ],
      "@lib/relationship/domain": [
        "libs/relationship/domain-relationship/src/index.ts"
      ],
      "@lib/relationship/feature": [
        "libs/relationship/feature-relationship/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
